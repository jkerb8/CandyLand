<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group5.cap4104.candyland.MainActivity"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/board"
        android:scaleType="fitXY"
        android:layout_below="@+id/banner"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Let's play Candy Land" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Let's play Candy Land" />

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Draw Card"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_alignStart="@+id/imageView2" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:src="@drawable/blank"
        android:id="@+id/imageView2"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who's turn is it?"
        android:layout_above="@+id/startGameBtn"
        android:layout_toEndOf="@+id/banner"
        android:layout_marginBottom="30dp" />


</RelativeLayout>
