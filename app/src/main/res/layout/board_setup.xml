<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group5.cap4104.candyland.MainActivity"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/board"
        android:scaleType="fitXY"
        android:layout_below="@+id/banner"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Let's play Candy Land" />

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Draw Card"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:src="@drawable/blank"
        android:layout_below="@+id/board"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/imageView2" />

    <ImageView
        android:id="@+id/candycane"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/candycane"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/board"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginBottom="2dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/plum"
        android:layout_alignTop="@+id/candycane"
        android:layout_toEndOf="@+id/banner"
        android:layout_marginStart="24dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/gumdrop"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/candycane"
        android:layout_toEndOf="@+id/candycane"
        android:layout_marginStart="9dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/peanut"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/banner"
        android:layout_marginEnd="4dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/lollipop"
        android:layout_alignTop="@+id/board"
        android:layout_alignStart="@+id/startGameBtn" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/snowflake"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/imageView3" />

</RelativeLayout>
